source ~/.vim/vimrc
nmap gi :action GotoImplementation<CR>
nmap gr :action ShowUsages<CR>
nmap gt :action GotoTypeDeclaration<CR>
nmap g[ :action GotoPreviousError<CR>
nmap g] :action GotoNextError<CR>
nmap <leader>f :action ReformatCode<CR>
nmap <leader>e :action RecentChangedFiles<CR>

nmap K :action ParameterInfo<CR>
" Make shift behave the way its suppposed to
nmap <S-Up> v<Up>
nmap <S-Down> v<Down>
nmap <S-Left> v<Left>
nmap <S-Right> v<Right>
vmap <S-Up> <Up>
vmap <S-Down> <Down>
vmap <S-Left> <Left>
vmap <S-Right> <Right>
imap <S-Up> <Esc>v<Up>
imap <S-Down> <Esc>v<Down>
imap <S-Left> <Esc>v<Left>
imap <S-Right> <Esc>v<Right>

" Disable that annoying bell sound
set visualbell
set noerrorbells
