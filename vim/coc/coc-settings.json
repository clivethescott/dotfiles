{
  "codeLens.enable": true,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"],
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "autopep8",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": ["--strict", "--show-column-numbers"],
  "python.analysis.typeCheckingMode": "strict",
  "metals.statusBarEnabled": true,
  "metals.ammoniteJvmProperties": ["-Xmx1G"],
  "metals.treeviews.alignment": "left",
  "metals.superMethodLensesEnabled": false,
  "metals.showInferredType": true,
  "metals.showImplicitArguments": true,
  "metals.showImplicitConversionsAndClasses": true,
  "metals.treeviews.gotoLastChild": "",
  "metals.treeviews.gotoFirstChild": "",
  "metals.treeviews.gotoPrevSibling": "",
  "metals.treeviews.gotoNextSibling": "",
  "coc.preferences.formatOnSaveFiletypes": [
    "dart",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "scala",
    "go",
    "python",
    "yaml",
    "json"
  ],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": false
      }
    }
  }
}
