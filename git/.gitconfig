[user]
	email = clivethescott@gmail.com
	name = Clive Gurure
[core]
	autocrlf = input
	excludesfile = /home/clive/.gitignore_global
[pager]
	branch = false
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[diff]
    tool = default-difftool
[merge]
  tool = vimdiff
	guitool = meld
	ff = true
[alias]
	uncommit = reset HEAD^
[pull]
	ff = true
[init]
	defaultBranch = main
